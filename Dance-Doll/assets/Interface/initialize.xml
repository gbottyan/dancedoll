<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <screen id="start" controller="danceDoll">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
      <panel id="panel" x="0px" y="0px" height="40px" width="150px" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="initialize()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <text id="text" font="Interface/Fonts/Calibri.fnt" color="#000f" text="Dance Doll Alpha V. 0.2" align="center" valign="center" />
      </panel>
    </layer>
  </screen>
</nifty>